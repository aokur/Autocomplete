<Window x:Class="Twpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автоматическое завершение ввода" Height="390" Width="525">
    <Grid>
        <TextBox Height="23" Margin="12,46,12,0" Name="textBox1" TextChanged="TextBox1TextChanged" VerticalAlignment="Top" KeyUp="TextBox1KeyUp" />
            
        <TextBox Margin="12,75,12,12" Name="textBox2" TextWrapping="WrapWithOverflow" AutoWordSelection="True" />
        <Popup Name="pComplete" MaxWidth="{Binding ElementName=textBox1, Path=Width}" PlacementTarget="{Binding ElementName=textBox1}"
               PopupAnimation="Slide" AllowsTransparency="True" Height="109" VerticalAlignment="Top">            
                <ListBox Margin="0,0,0,0" Name="listBox1"  Width="{Binding ElementName=textBox1, Path=ActualWidth}" VerticalAlignment="Top" HorizontalAlignment="Left" MaxWidth="200" MaxHeight="150" />
        </Popup>
        <Label Content="Введите текст в поле. Навигация - стрелки (Вверх/Вниз), выбор - Ввод." Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
    </Grid>
</Window>
